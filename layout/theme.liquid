<!doctype html>

  {%- assign direction = 'ltr' -%}
  {%- case request.locale.iso_code -%}
    {%- when 'ar' or 'arc' or 'dv' or 'fa' or 'ha' or 'he' or 'kwh' or 'ks' or 'ku' or 'ps' or 'ur' or 'yi' -%}
      {%- assign direction = 'rtl' -%}
  {%- endcase -%}
  
  <html class="no-js" lang="{{ request.locale.iso_code }}" dir="{{ direction }}">
    <head>
      <meta name="trustpilot-one-time-domain-verification-id" content="112c0bd3-4414-4575-8877-d3c490637217"/>
      <!-- Meta Pixel Code -->
      <script>
      !function(f,b,e,v,n,t,s)
