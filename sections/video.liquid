{% schema %}
{
  "name": "Video Section",
  "settings": [
    {
      "type": "text",
      "id": "desktop_video_url",
      "label": "Desktop Video URL",
      "info": "Enter the URL of the video file for desktop view."
    },
    
    {
      "type": "text",
      "id":"tab_video_url",
      "label":"Tab Video Url",
      "info": "Enter the URL of the video file Tab view"
    },
    
    {
      "type": "text",
      "id": "mobile_video_url",
      "label": "Mobile Video URL",
      "info": "Enter the URL of the video file for mobile view."
    },
    {
      "type": "url",
      "id": "video_link_url",
      "label": "Video Link URL",
      "info": "Enter the URL that both videos should link to."
    }
  ],
  "presets": [
    {
      "name": "Video Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  /* General wrapper styling for both mobile and desktop */
  .video-wrapper {
    position: relative;
    overflow: hidden;
    width: 100vw;
    height: 100vh; 
    margin: 0;
    padding: 0;
  }

  /* Styling for the video element */
  .video-wrapper video {
    position: absolute;
    top: 0; 
    left: 0; 
    width: 100vw;
    height: 100vh; 
    object-fit: cover; 
    z-index: -1;
  }

  @media (max-width: 767px) {
 
    .video-wrapper--mobile {
      display: block; 
    }
     .video-wrapper--tab{
      display:none; 
    }
     .video-wrapper--desktop {
      display: none; 
    }
  }
  @media (min-width: 768px) and (max-width: 1024px) {
    .video-wrapper--tab {
      display: block;
      object-fit: cover;
    }
    .video-wrapper--mobile {
        display: none; 
    }
    .video-wrapper--desktop {
        display: none; 
    }
    
  .video-wrapper video{
    width:100%;
    height:70vh;
    object-fit: contain;
    position:static;
  } 
    
    .video-wrapper{
    position: relative;
    width: 100%;
    max-height: clamp(500px, 600px, 700px);
    }
  }

  @media (min-width: 1025px) {
    .video-wrapper--mobile {
      display: none; 
    }
    .video-wrapper--tab{
      display:none;
    }
    .video-wrapper--desktop {
      display: block; 
    }
  }
</style>

<section class="video-section">
  <a href="{{ section.settings.video_link_url }}" class="video-link">
    <div class="video-wrapper video-wrapper--desktop">
      {% if section.settings.desktop_video_url != blank %}
        <video autoplay muted playsinline loop>
          <source src="{{ section.settings.desktop_video_url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      {% else %}
        <p>No desktop video provided.</p>
      {% endif %}
    </div>
    <div class="video-wrapper video-wrapper--tab">
      {% if section.settings.tab_video_url != blank %}
        <video autoplay muted playsinline loop>
          <source src="{{ section.settings.tab_video_url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      {% else %}
        <p>No Tab video provided.</p>
      {% endif %}
    </div>
    <div class="video-wrapper video-wrapper--mobile">
      {% if section.settings.mobile_video_url != blank %}
        <video autoplay muted playsinline loop>
          <source src="{{ section.settings.mobile_video_url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      {% else %}
        <p>No mobile video provided.</p>
      {% endif %}
    </div>
  </a>
</section>



